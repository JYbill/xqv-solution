datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  // 字段名  类型   	类型修饰符    										属性
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  email   String   @unique
  name    String
  age     Int?
  account String // 账号
  password String // 密码

  @@map("Users")
}
